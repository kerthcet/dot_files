eval $(thefuck --alias)

# nvm 会增加zsh启动时间，非常卡
function loadnvm(){
	export NVM_DIR="$HOME/.nvm"
	. "/usr/local/opt/nvm/nvm.sh"
}

# Load RVM into a shell session *as a function*
function loadrvm(){
	[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
}

